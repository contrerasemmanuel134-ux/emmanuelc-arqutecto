rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Reglas para la colección "proyectos"
    match /proyectos/{proyectoId} {
      // Cualquiera puede LEER los proyectos (para tu portafolio público)
      allow read: if true;
      // Solo tú (un usuario autenticado) puedes ESCRIBIR (crear, editar, borrar)
      allow write: if request.auth != null;
    }

    // Reglas para la colección "testimonios"
    match /testimonios/{testimonioId} {
      // Un visitante puede CREAR un testimonio si llena los campos requeridos
      // y el estado inicial es "pendiente".
      allow create: if request.resource.data.nombreCliente is string
                      && request.resource.data.textoTestimonio is string
                      && request.resource.data.calificacion is number
                      && request.resource.data.estado == "pendiente";

      // Cualquiera puede LEER los testimonios, pero solo si su estado es "aprobado".
      // Esta es la regla clave para tu página de reseñas.
      allow read: if resource.data.estado == 'aprobado';

      // Solo tú puedes ACTUALIZAR (aprobar) o BORRAR testimonios.
      allow update, delete: if request.auth != null;
    }

    // Reglas para la colección "blogPosts"
    match /blogPosts/{postId} {
      // Cualquiera puede LEER las publicaciones de tu blog.
      allow read: if true;
      // Solo tú puedes ESCRIBIR (crear, editar, borrar) artículos.
      allow write: if request.auth != null;
    }
  }
}