{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"esModuleInterop": true,
		"allowJs": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		// --- L√çNEAS AGREGADAS ---
		"outDir": "./dist",
		"rootDir": "./src"
		// -------------------------
	},
	"include": [
		"src",
		"env.d.ts",
		"public/assets"
	],
	"exclude": [
		"dist",
		"node_modules",
		"public/assets"
	]
}