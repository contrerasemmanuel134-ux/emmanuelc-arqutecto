// ¡AÑADE ESTAS DOS LÍNEAS!
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';


// Y esta para tus estilos, que ya tenías
import '../styles/main.css';

// El resto de tu código de props...
export interface Props {
    title: string;
    description?: string;
}
const { title, description = 'Descripción por defecto' } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
    {/* ... todo tu head ... */}
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
</head>

<body>
        <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NNJ8BG7H"
        height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    
    {/* Y aquí los usas con la Mayúscula */}
    <Header />
    <main>
        <slot />
    </main>
    <Footer />

</body>
</html>