---
// src/components/Header.astro
import Logo from './Logo.astro';
---
<header class="header">
    <div class="header__container container">
        <a href="/" class="header__logo">
            <Logo />
        </a>
        <nav class="header__nav">
            <a href="/" class="header__link">Inicio</a>
            <a href="/sobre-mi" class="header__link">Sobre mí</a>
            <a href="/servicios" class="header__link">Servicios</a>
            <a href="/proceso" class="header__link">Mi Proceso</a>
            <a href="/proyectos" class="header__link">Proyectos</a>
            <a href="/blog" class="header__link">Blog</a>
            <a href="/contacto" class="header__link">Contacto</a>
        </nav>
        <div class="header__actions">
            <a href="/admin" class="btn btn--primary">Acceso Clientes</a>
            <button class="header__menu-btn" aria-label="Abrir menú">
                <span></span>
                <span></span>
                <span></span>
            </button>
        </div>
    </div>
</header>

<script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
        const menuBtn = document.querySelector('.header__menu-btn');
        const nav = document.querySelector('.header__nav');

        if (menuBtn && nav) {
            menuBtn.addEventListener('click', () => {
                nav.classList.toggle('is-active');
                menuBtn.classList.toggle('is-active');
            });
        }
    });
</script>
