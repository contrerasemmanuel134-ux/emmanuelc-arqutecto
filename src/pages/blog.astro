---
import Layout from '../layouts/Layout.astro';

// Este frontmatter se ejecutará en el servidor al construir la página.
// Dejaremos la lógica de fetching de datos para después.
--- 

<Layout 
    title="Blog de Arquitectura y Desarrollo - Emmanuel Contreras"
    description="Artículos, tutoriales y reflexiones sobre desarrollo web, arquitectura de software y el stack de Firebase y Astro.">

    <section class="page-section">
        <div class="container">
            <div class="text-center mb-12">
                <h1 class="hero-interior__title">Mi Blog</h1>
                <p class="text-lg mt-4">Explorando el mundo del desarrollo web, una línea de código a la vez.</p>
            </div>

            <div id="blog-posts-container" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Los posts del blog se cargarán aquí dinámicamente -->
                <p>Cargando posts...</p>
            </div>
        </div>
    </section>

</Layout>

